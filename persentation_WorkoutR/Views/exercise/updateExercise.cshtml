@model persentation_WorkoutR.Models.exerciseModel

@{
    ViewBag.Title = "updateExercise";
}

<br />
@Html.ActionLink("Back to List", "viewExercise")
<h2>Update Exercise</h2><br />
<div class="w3ls-exerciseDB">
    @using (Html.BeginForm("updateExercise", "exercise", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FK_bodyPart)
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.FK_bodyPart, new SelectList(Model.bodyPartList, "bodyPartID", "bodyPartName"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FK_bodyPart, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(model => model.exerciseID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.exerciseID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.exerciseID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.exerciseName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.exerciseName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Exercise Name" } })
                @Html.ValidationMessageFor(model => model.exerciseName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.exerciseDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.exerciseDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.exerciseDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>
