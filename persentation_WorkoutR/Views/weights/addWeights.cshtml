@model persentation_WorkoutR.Models.weightsModel
    @using persentation_WorkoutR.Models
@{
    /**/

    ViewBag.Title = "addWeights";
}


@using (Html.BeginForm("addWeights", "weights", FormMethod.Post))
{
    <div class="container" >

        <div class="form-group">
            @Html.LabelFor(m => m.lbs, "Weights(lbs)")
            @Html.TextBoxFor(m => m.lbs, new { @style = "width:70%", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.lbs, "", new { @class = "text-danger"})
        </div>

        <div class="form-group">
            @Html.HiddenFor(m => m.FK_routineWorkID)
            @Html.ValidationMessageFor(m => m.FK_routineWorkID, "", new { @class = "text-danger" })
        </div>

        <input type="submit" class="btn-danger" value="Add" />
    </div>
}
